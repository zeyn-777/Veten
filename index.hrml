        @keyframes fly { 0% { transform: translateY(0) rotate(0deg); opacity: 0; } 20% { opacity: 1; } 100% { transform: translateY(-110vh) rotate(360deg); opacity: 0; } }

        /* HEADER */
        .top-bar {
            padding: 15px 20px;
            background: rgba(0, 74, 153, 0.1);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 10;
        }

        /* CHAT SAH∆èSƒ∞ (∆èSAS) */
        .chat-container {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            scroll-behavior: smooth;
            z-index: 10;
            max-width: 800px;
            margin: 0 auto;
            width: 100%;
        }

        /* Mesaj Dizaynƒ± */
        .message {
            max-width: 80%;
            padding: 12px 18px;
            border-radius: 20px;
            font-size: 1rem;
            line-height: 1.5;
            position: relative;
            animation: popIn 0.3s ease;
        }
        @keyframes popIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .bot-message {
