    <script>
        // === AZE AI BEYNƒ∞ (DATABASE) ===
        // Buraya ist…ôdiyin q…ôd…ôr ≈ü…ôhid …ôlav…ô ed…ô bil…ôrs…ôn
        const memory = [
            {
                keys: ["mubariz", "m√ºbariz", "ibrahimov"],
                ad: "M√ºbariz Aƒüak…ôrim oƒülu ƒ∞brahimov",
                status: "Milli Q…ôhr…ôman üéñÔ∏è",
                rayon: "Bil…ôsuvar",
                img: "https://upload.wikimedia.org/wikipedia/az/2/29/M%C3%BCbariz_%C4%B0brahimov.jpg",
                info: "2010-cu il iyunun 18-d…ô t…ôkba≈üƒ±na d√º≈üm…ôn ordusunun √ßoxsaylƒ± q√ºvv…ôsini m…ôhv ed…ôr…ôk q…ôhr…ômancasƒ±na ≈ü…ôhid olmu≈üdur."
            },
            {
                keys: ["polad", "hashimov", "h…ô≈üimov", "general"],
                ad: "Polad ƒ∞srayƒ±l oƒülu H…ô≈üimov",
                status: "General-Mayor üåü",
                rayon: "Q…ôb…ôl…ô (V…ôndam)",
                img: "https://upload.wikimedia.org/wikipedia/az/d/d4/Polad_H%C3%A4%C5%9Fimov.jpg",
                info: "2020-ci il iyulun 14-d…ô Tovuz istiqam…ôtind…ô ged…ôn ≈üidd…ôtli d√∂y√º≈ül…ôrd…ô √∂n x…ôtt…ô …ôsg…ôrl…ôrinin yanƒ±nda olark…ôn ≈ü…ôhid olmu≈üdur."
            },
            {
                keys: ["xudayar", "yusifzade", "yusifzad…ô"],
                ad: "Xudayar M√ºsl√ºm oƒülu Yusifzad…ô",
                status: "V…ôt…ôn M√ºharib…ôsi ≈û…ôhidi üïäÔ∏è",
                rayon: "B…ôrd…ô",
                img: "https://upload.wikimedia.org/wikipedia/az/d/d5/Xudayar_Yusifzad%C3%A4.jpg",
                info: "'V…ôt…ôn yax≈üƒ±dƒ±r' t…ôsnifi il…ô xalqƒ±mƒ±zƒ±n q…ôlbind…ô taxt quran q…ôhr…ômanƒ±mƒ±z. Z…ôngilan d√∂y√º≈ül…ôrind…ô ≈ü…ôhidlik zirv…ôsin…ô ucalƒ±b."
            },
            {
                keys: ["cebrayil", "c…ôbrayƒ±l", "dovletzade"],
                ad: "C…ôbrayƒ±l D√∂vl…ôtzad…ô",
                status: "V…ôt…ôn M√ºharib…ôsi ≈û…ôhidi ‚öîÔ∏è",
                rayon: "Sumqayƒ±t",
                img: "https://upload.wikimedia.org/wikipedia/az/4/44/C%C3%A4bray%C4%B1l_D%C3%B6vl%C3%A4tzad%C3%A4.jpg",
                info: "Polad H…ô≈üimovun qisasƒ±nƒ± alacaƒüƒ±na s√∂z vermi≈ü v…ô bu yolda q…ôhr…ômancasƒ±na vuru≈üaraq ≈ü…ôhid olmu≈üdur."
            },
            {
                keys: ["albert", "aqarunov"],
                ad: "Albert Aqarunov",
                status: "Milli Q…ôhr…ôman üá¶üáøüáÆüá±",
                rayon: "Bakƒ±",
                img: "https://upload.wikimedia.org/wikipedia/az/0/07/Albert_Aqarunov.jpg",
                info: "≈ûu≈üa uƒürunda ged…ôn d√∂y√º≈ül…ôrd…ô …ôfsan…ôvi tank komandiri kimi tanƒ±nƒ±r. Bakƒ±da onun ≈ü…ôr…ôfin…ô heyk…ôl ucaldƒ±lƒ±b."
            }
        ];

        const chatBox = document.getElementById('chatBox');
        const userInput = document.getElementById('userInput');

        // Mesaj g√∂nd…ôrm…ôk
        function sendMessage() {
            const text = userInput.value.trim();
            if (!text) return;

            // ƒ∞stifad…ô√ßi mesajƒ±nƒ± ekrana vur
            addMessage(text, 'user');
            userInput.value = '';

            // Botun "d√º≈ü√ºnm…ôsi" (Gecikm…ô)
            setTimeout(() => {
                analyzeText(text);
            }, 600);
        }

        // Enter d√ºym…ôsi
        userInput.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') sendMessage();
        });

        // M…ôtnin analizi (AI Hiss…ôsi)
        function analyzeText(text) {
            const lowerText = text.toLowerCase();
            
            // 1. Salamla≈üma
            if (lowerText.includes('salam') || lowerText.includes('salam aleykum')) {
                addMessage("Aleykum salam! V…ôt…ôn q…ôhr…ômanlarƒ±ndan kimi axtarƒ±rsƒ±nƒ±z?", 'bot');
                return;
            }
            if (lowerText.includes('necesen') || lowerText.includes('nec…ôs…ôn')) {
                addMessage("T…ô≈ü…ôkk√ºrl…ôr! M…ôn AZE PRO t…ôr…ôfind…ôn yaradƒ±lmƒ±≈ü S√ºni Z…ôkayam v…ô xidm…ôtinizd…ôy…ôm.", 'bot');
                return;
            }

            // 2. M…ôlumat bazasƒ±nda axtarƒ±≈ü
            let found = null;
            
            // Sad…ô alqoritm: Yazƒ±lan s√∂zl…ôrd…ôn h…ôr hansƒ± biri a√ßar s√∂zl…ôr…ô uyƒüundursa tap
            for (let item of memory) {
                for (let key of item.keys) {
                    if (lowerText.includes(key)) {
                        found = item;
                        break;
                    }
                }
                if (found) break;
            }

            // 3. N…ôtic…ôni g√∂st…ôr
            if (found) {
                const responseHTML = `
                    <strong>${found.ad}</strong> <br>
                    <span class="badge bg-primary">${found.status}</span> <br>
                    <small>üìç ${found.rayon}</small> <br><br>
                    ${found.info} <br>
                    <img src="${found.img}" class="bot-img" onerror="this.style.display='none'">
                `;
                addMessage(responseHTML, 'bot');
            } else {
                addMessage("√úzr ist…ôyir…ôm, bu ≈ü…ôhid haqqƒ±nda m…ôlumat bazamda h…ôl…ô yoxdur. Z…ôhm…ôt olmasa adƒ±nƒ± d…ôqiq yazdƒ±ƒüƒ±nƒ±zdan …ômin olun.", 'bot');
            }
        }

        // Mesajƒ± ekrana …ôlav…ô ed…ôn funksiya
        function addMessage(html, sender) {
            const div = document.createElement('div');
            div.className = `message ${sender}-message`;
            div.innerHTML = html;
            chatBox.appendChild(div);
            // Avtomatik a≈üaƒüƒ± s√ºr√º≈üd√ºr
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        // Saat
        setInterval(() => {
            const d = new Date();
            const timeString = d.getHours().toString().padStart(2, '0') + ':' + d.getMinutes().toString().padStart(2, '0');
            document.getElementById('clock').innerText = timeString;
        }, 1000);

        // U√ßan Bayraqlar
        function flyFlags() {
            const box = document.getElementById('flags');
            setInterval(() => {
                const f = document.createElement('div');
                f.className = 'flag-particle';
                f.innerText = "üá¶üáø";
                f.style.left = Math.random() * 100 + "vw";
                box.appendChild(f);
                setTimeout(() => f.remove(), 15000);
            }, 2000);
        }
        flyFlags();

    </script>
</body>
</html>
